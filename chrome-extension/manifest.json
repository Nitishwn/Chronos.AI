{
  "manifest_version": 3,
  "name": "Meeting Assistant",
  "version": "1.0",
  "description": "An AI-powered assistant to manage meetings via a custom backend.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/"
  ]
}